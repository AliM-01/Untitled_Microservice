@model ServiceHost.ViewModels.Product.ProductViewModel

@inject IProductService _productService

<div class="col-lg-3 col-md-6">
	<div class="single-product">
		<a asp-page="ProductDetail" asp-route-productId="@Model.Id"> 
			<img class="img-fluid" src="@_productService.GetProductImageUri(Model.ImagePath)" alt="@Model.Title">
		</a>
		<div class="product-details">
			<a asp-page="ProductDetail" asp-route-productId="@Model.Id">
				<h6>@Model.Title</h6>
			</a>
			<div class="price">
				<h6>@Model.Price</h6>
			</div>
			<div class="prd-bottom">
				<form asp-page-handler="AddToCart" method="post" name="addToCartForm" id="add_cart_form">
					<a href="javascript:;" onclick="parentNode.submit();" class="social-info">
						<span class="la la-shopping-cart"></span>
						<p class="hover-text">Add to Cart</p>
					</a>
					<input type="hidden" asp-for="@Model.Id" name="productId" />
                </form>
			</div>
		</div>
	</div>
</div>