@page "/p/{productId}"
@model ServiceHost.Pages.ProductDetailModel
@{
    ViewData["Title"] = Model.Product.Title;
}

@functions {
	void Increase(){
		Model.Quantity++;
	}

	void Reduce(){
		if(Model.Quantity > 1)
			Model.Quantity--;
	}
}

<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Product Details Page</h1>
				<nav class="d-flex align-items-center">
					<a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
					<a href="#">Shop<span class="lnr lnr-arrow-right"></span></a>
					<a href="single-product.html">product-details</a>
				</nav>
			</div>
		</div>
	</div>
</section>



<div class="product_image_area">
	<div class="container">
		<div class="row s_product_inner">
			<div class="col-lg-8">
				<div class="s_product_text">
					<h3>@Model.Product.Title</h3>
					<h2>$@Model.Product.Price</h2>
					<ul class="list">
						<li><a class="active" href="#"><span>Category</span> : @Model.Product.Category.ToUpper()</a></li>
						<li><a href="#"><span>Availibility</span> : In Stock</a></li>
					</ul>
					<p>@Model.Product.Description</p>
					<div class="product_count">
						<label for="qty">Quantity:</label>
						<input asp-for="Quantity" type="text" name="qty" value="@Model.Quantity" title="Quantity:"
							class="input-text qty">
						<form asp-page-handler="AddToCart" method="post">
							<button onclick="@Increase"
								class="increase items-count" type="button"><i class="lnr lnr-chevron-up"></i></button>
							<button onclick="@Reduce"
								class="reduced items-count" type="button"><i class="lnr lnr-chevron-down"></i></button>

						</form>
					</div>
					<div class="card_area d-flex align-items-center">
						<a class="primary-btn" href="#">Add to Cart</a>
						<a class="icon_btn" href="#"><i class="lnr lnr lnr-diamond"></i></a>
						<a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
					</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="s_Product_carousel">
					<div class="single-prd-item">
						<img class="img-fluid" src="@Model.Product.ImagePath" alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
	
<section class="product_description_area">
	<div class="container">
		<ul class="nav nav-tabs" role="tablist">
			<li class="nav-item">
				<a class="nav-link active" id="desc-tab" data-toggle="tab" href="#desc" role="tab" aria-controls="desc">Description</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" id="specs-tab" data-toggle="tab" href="#specs" role="tab"
					aria-controls="specs" aria-selected="false">Specs</a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="desc" role="tabpanel" aria-labelledby="desc-tab">
				<p>@Model.Product.Description</p>
			</div>
			<div class="tab-pane fade" id="specs" role="tabpanel" aria-labelledby="specs-tab">
				<div class="table-responsive">
					<table class="table">
						<tbody>
							<tr>
								<td>
									<h5>RAM</h5>
								</td>
								<td>
									<h5>6gb</h5>
								</td>
							</tr>
							<tr>
								<td>
									<h5>Storage</h5>
								</td>
								<td>
									<h5>126gb</h5>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>